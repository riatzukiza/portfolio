(macro controller (...body)
       `(markup (.script (quote (scoped ...@body)))))

(macro scripts (...paths)
       `(markup (.head ...@(.map paths (=> (p) `(.script .src @p))))))

(html (.head  (scripts "/js/bundle.js"

                       "/bundles/side-scroller.js"
                       ))

      (controller (require "side-scroller.js")))

